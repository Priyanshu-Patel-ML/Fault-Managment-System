{
  "version": "1.0.0",
  "title": "Change MongoDB maxIncomingConnections setting",
  "description": "Update maxIncomingConnections and restart MongoDB pod in Kubernetes.",
  "tags": ["mongodb", "chaos", "custom-action"],
  "method": [
    {
      "name": "change-max-connections",
      "type": "action",
      "provider": {
        "type": "python",
        "module": "mongodb_actions",
        "func": "update_mongodb_max_connections",
        "arguments": {
          "new_max_connections": 10
        }
      }
    }
  ]
}
